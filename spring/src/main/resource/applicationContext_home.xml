            <!--<list>-->
                <!--<value>transactionAdvisor</value>-->
            <!--</list>-->
        <!--</property>-->
    <!--</bean>-->

    <bean id="testUserService" class="springbook.user.service.proxyFactoryBean.UserServiceTest$TestUserServiceImpl" parent="userService" />
</beans>